<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/fragment_start">

    <fragment
        android:id="@+id/fragment_start"
        android:name="com.asmitta.talkin.view.chatRooms.StartFragment"
        android:label="StartFragment">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="atr:fragment_start" />
    </fragment>

    <fragment
        android:id="@+id/fragment_username"
        android:name="com.asmitta.talkin.view.userProfile.UsernameFragment"
        android:label="UsernameFragment">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="atr:fragment_username" />
    </fragment>

    <fragment
        android:id="@+id/fragment_chat"
        android:name="com.asmitta.talkin.view.chatRoom.ChatFragment"
        android:label="ChatFragment">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="atr:fragment_chat" />
    </fragment>

    <fragment
        android:id="@+id/fragment_search"
        android:name="com.asmitta.talkin.view.searchUser.SearchFragment"
        android:label="SearchFragment">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="atr:fragment_search" />
    </fragment>

    <include app:graph="@navigation/navigation_search" />
</navigation>
